{
		"env": {
				"browser": true,
				"commonjs": true,
				"es2020": true,
				"node": true
		},
		"extends": [
				"eslint:recommended",
				"plugin:@typescript-eslint/eslint-recommended",
				"plugin:@typescript-eslint/recommended"
		],
		"parser": "@typescript-eslint/parser",
		"parserOptions": {
				"ecmaVersion": 11
		},
		"plugins": [
				"@typescript-eslint"
		],
		"rules": {
				"indent": [
						"error",
						"tab"
				],
				"linebreak-style": [
						"error",
						"windows"
				],
				"quotes": [
						"error",
						"double"
				],
				"semi": [
						"error",
						"always"
				],
				"no-var-requires": "false"
		}
}
